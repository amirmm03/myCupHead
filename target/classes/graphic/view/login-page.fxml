<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1400.0" styleClass="backGround" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphic.view.LoginPage">
    <stylesheets>
        <URL value="@../first-page.css" />
    </stylesheets>
    <top>
        <Label text="enter your info" fx:id="messageLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="74.0" prefWidth="431.0" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="Bradley Hand ITC" size="35.0" />
            </font></Label>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="1400.0" spacing="200.0">
                <children>
                    <Label alignment="CENTER" prefHeight="34.0" prefWidth="108.0" styleClass="guiding-text" text="username" />
                    <Label alignment="CENTER" prefHeight="34.0" prefWidth="108.0" styleClass="guiding-text" text="password" />
                </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="86.0" prefWidth="1400.0" spacing="40.0">
                <children>
                    <TextField fx:id="username" alignment="CENTER" promptText="username" />
                    <TextField fx:id="password" alignment="CENTER" promptText="password" />
                </children>
            </HBox>
            <Button mnemonicParsing="false" onMouseClicked="#login" text="login!!!">

            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#backToFirstPage" text="back">

            </Button>
        </VBox>
    </center>
</BorderPane>
